<h1>My Stuff</h1>
<ul>
  <% @stuffs.each do |stuff| %>
    <li>
      <%= stuff.name %>
      <% if stuff.favorite %>
        <%= render 'stuffs/favorite', stuff: stuff %>
      <% else %>
        <%= render 'stuffs/unfavorite', stuff: stuff %>
      <% end %>
    </li>
  <% end %>
</ul>

<h2>Add a Stuff</h2>
<%= form_for(Stuff.new) do |f| %>
  <div>name: <%= f.text_field :name %></div>
  <div>favorite?: <%= f.check_box :favorite %></div>
  <div><%= f.submit %></div>
<% end %>
